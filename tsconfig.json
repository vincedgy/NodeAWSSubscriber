{ 
    "compileOnSave": true,
    "compilerOptions": { 
        "target": "es5",
        "module": "commonjs", 
        "strictNullChecks": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "Node",
        "noImplicitAny": false, 
        "outDir": "./build",
        "lib": [
            "dom",
            "es2015",
            "es5",
            "es6"
        ]
    }, 
    "include": [
        "*",
        "src/**/*"
    ],
    "exclude" : [ 
        "./build", 
        "./node_modules",
        "**/*.spec.ts"
    ] 
}